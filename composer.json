{
    "name": "clabonte/codeprimer",
    "type": "library",
    "description": "CodePrimer, customizable production-grade code generator for architects and team leads",
    "homepage": "https://github.com/clabonte/codeprimer",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Labonte",
            "role": "Project Founder and Lead Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/clabonte/codeprimer/issues"
    },
    "prefer-stable": true,
    "require": {
        "php": "^7.3.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "doctrine/inflector": "^1.3",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "ext-xdebug": "^2.7.2",
        "phpunit/phpunit": "^8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "CodePrimer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodePrimer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format-code": "php-cs-fixer fix",
        "phpunit": "vendor/bin/phpunit -c phpunit.xml.dist",
        "sample-app": "cd sample; php ChannelApp.php; cd ..",
        "update-doc": "cd app; php prime.php; cd .."
    }
}
