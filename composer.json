{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.3.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/inflector": "^1.3",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "CodePrimer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodePrimer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "php-cs-fixer": "php-cs-fixer --rules=@Symfony"
    }
}
